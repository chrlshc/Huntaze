{
  "type": "timeseries",
  "title": "TikTok publish burn rate (fast & slow)",
  "fieldConfig": {
    "defaults": {
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "orange", "value": 6 },
          { "color": "red", "value": 14.4 }
        ]
      }
    }
  },
  "targets": [
    {
      "refId": "A",
      "expr": "(\n  sum(rate(social_tiktok_publish_requests_total{result=~\"error|failed\"}[$__rate_interval]))\n/\n  max(1, sum(rate(social_tiktok_publish_requests_total[$__rate_interval])))\n) / 0.001",
      "legendFormat": "fast burn $__rate_interval"
    },
    {
      "refId": "B",
      "expr": "(\n  sum(rate(social_tiktok_publish_requests_total{result=~\"error|failed\"}[1h]))\n/\n  max(1, sum(rate(social_tiktok_publish_requests_total[1h])))\n) / 0.001",
      "legendFormat": "slow burn 1h"
    }
  ],
  "options": {
    "legend": { "displayMode": "list", "placement": "bottom" },
    "tooltip": { "mode": "single" }
  },
  "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 }
}

