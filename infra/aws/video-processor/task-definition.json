{
  "family": "huntaze-video-processor",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "4096",
  "memory": "8192",
  "ephemeralStorage": {
    "sizeInGiB": 100
  },
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/huntaze-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/huntaze-video-processor-role",
  "containerDefinitions": [
    {
      "name": "video-processor",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/huntaze-video-processor:latest",
      "essential": true,
      "environment": [
        { "name": "AWS_REGION", "value": "${AWS_REGION}" },
        { "name": "SQS_QUEUE_URL", "value": "${SQS_QUEUE_URL}" },
        { "name": "S3_BUCKET", "value": "${S3_BUCKET}" },
        { "name": "DATABASE_URL", "value": "${DATABASE_URL}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/huntaze/video-processor",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "echo healthy || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
