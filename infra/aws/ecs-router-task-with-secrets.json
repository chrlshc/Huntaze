{
  "family": "huntaze-ai-router",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::317805897534:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::317805897534:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "ai-router",
      "image": "317805897534.dkr.ecr.us-east-2.amazonaws.com/huntaze/ai-router:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "ROUTER_HOST", "value": "0.0.0.0"},
        {"name": "ROUTER_PORT", "value": "8000"},
        {"name": "ROUTER_WORKERS", "value": "2"},
        {"name": "ROUTER_REGION", "value": "eastus2"}
      ],
      "secrets": [
        {
          "name": "AI_ROUTER_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:317805897534:secret:huntaze/ai-router/api-key-nFME6P"
        },
        {
          "name": "AZURE_AI_CHAT_ENDPOINT",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:317805897534:secret:huntaze/ai-router/azure-endpoint-XC8CW7"
        },
        {
          "name": "AZURE_AI_CHAT_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:317805897534:secret:huntaze/ai-router/azure-key-EPB8sR"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/huntaze-ai-router",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
