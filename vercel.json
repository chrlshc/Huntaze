{
  "framework": "nextjs",
  "cleanUrls": true,
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.huntaze.com",
    "NEXT_PUBLIC_APP_URL": "https://huntaze.com"
  },
  "rewrites": [
    { "source": "/api/(auth|cron)/:path*", "destination": "/api/:path*" },
    { "source": "/api/:path*", "destination": "https://api.huntaze.com/api/:path*" }
  ],
  "crons": [
    {
      "path": "/api/cron/monthly-billing",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron/refresh-oauth",
      "schedule": "*/30 * * * *"
    }
  ]
}
