{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000", "http://localhost:3000/products", "http://localhost:3000/admin"],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["error", { "minScore": 0.9 }],
        "metrics/largest-contentful-paint": ["error", { "maxNumericValue": 2500, "aggregationMethod": "p95" }],
        "metrics/cumulative-layout-shift": ["error", { "maxNumericValue": 0.1, "aggregationMethod": "p95" }],
        "metrics/interaction-to-next-paint": ["error", { "maxNumericValue": 200, "aggregationMethod": "p95" }],
        "metrics/first-contentful-paint": ["error", { "maxNumericValue": 1800, "aggregationMethod": "p95" }],
        "metrics/total-blocking-time": ["error", { "maxNumericValue": 200, "aggregationMethod": "p95" }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}