# Backup Configuration
# Add these to your .env.production file

# Enable automated backups
BACKUP_ENABLED=true

# Encryption key for backups (generate with: openssl rand -hex 32)
BACKUP_ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# S3 bucket for backup storage
BACKUP_S3_BUCKET=huntaze-backups

# AWS credentials (if not already configured)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Backup retention policies (days)
BACKUP_RETENTION_DAILY=7
BACKUP_RETENTION_WEEKLY=4
BACKUP_RETENTION_MONTHLY=12

# Backup schedules (cron format)
BACKUP_SCHEDULE_DAILY=0 3 * * *     # Daily at 3 AM
BACKUP_SCHEDULE_TEST=0 14 * * 0     # Weekly test on Sunday 2 PM

# Monitoring webhook for backup status
MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook/backup

# Prometheus pushgateway (optional)
PROMETHEUS_PUSHGATEWAY=http://localhost:9091