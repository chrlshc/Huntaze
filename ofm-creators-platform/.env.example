# Application
NODE_ENV=development
PORT=3000
APP_NAME="Huntaze Platform"
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/huntaze_platform
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=5000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=huntaze:

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ISSUER=huntaze-platform

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_...

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=huntaze-platform-private
AWS_S3_PUBLIC_BUCKET=huntaze-platform-public
AWS_S3_SIGNED_URL_EXPIRY=3600
AWS_SES_FROM_EMAIL=noreply@huntaze.com
AWS_SES_REPLY_TO_EMAIL=charles@huntaze.com

# Temporal
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=huntaze-platform-queue

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

ONLYFANS_CLIENT_ID=
ONLYFANS_CLIENT_SECRET=
ONLYFANS_CALLBACK_URL=http://localhost:3000/auth/onlyfans/callback

PATREON_CLIENT_ID=
PATREON_CLIENT_SECRET=
PATREON_CALLBACK_URL=http://localhost:3000/auth/patreon/callback

# Security
BCRYPT_ROUNDS=10
OTP_EXPIRY=300
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Email
EMAIL_PROVIDER=ses
EMAIL_TEMPLATE_WELCOME=welcome-v1
EMAIL_TEMPLATE_PASSWORD_RESET=password-reset-v1
EMAIL_TEMPLATE_SUBSCRIPTION=subscription-v1
EMAIL_TEMPLATE_PAYOUT=payout-v1

# SMS (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Compliance
KYC_PROVIDER=stripe
KYC_VERIFICATION_THRESHOLD=10000
TAX_PROVIDER=taxjar
TAXJAR_API_KEY=

# Analytics
MIXPANEL_TOKEN=
MIXPANEL_API_SECRET=
SEGMENT_WRITE_KEY=

# Monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_MAX_TOKENS=4096
AZURE_OPENAI_TEMPERATURE=0.7

# Feature Flags
FEATURE_SUBSCRIPTIONS=true
FEATURE_PAYWALL=true
FEATURE_APP_STORE=true
FEATURE_CAMPAIGNS=true
FEATURE_ANALYTICS=true
FEATURE_COMPLIANCE=true
MAINTENANCE_MODE=false

# Limits
MAX_FILE_SIZE=104857600
MAX_VIDEO_SIZE=1073741824
MAX_IMAGES_PER_POST=20
MAX_PRODUCTS_PER_CREATOR=1000
MAX_SUBSCRIPTION_PLANS=10

# Cache TTLs (seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER=600
CACHE_TTL_PRODUCT=1800
CACHE_TTL_ANALYTICS=300

# Logging
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE_ENABLED=true
LOG_FILE_DIR=logs
LOG_HANDLE_EXCEPTIONS=true