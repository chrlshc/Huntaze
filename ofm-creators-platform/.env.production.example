# =====================================================
# HUNTAZE PLATFORM - PRODUCTION ENVIRONMENT VARIABLES
# =====================================================
# ⚠️  COPY TO .env.production AND FILL ALL VALUES
# ⚠️  NEVER COMMIT ACTUAL SECRETS TO GIT
# =====================================================

# ====================
# APPLICATION CORE
# ====================
NODE_ENV=production
APP_PORT=3000
APP_HOST=0.0.0.0
APP_NAME="Huntaze Platform"
APP_URL=https://app.huntaze.com
NEXT_PUBLIC_APP_URL=https://app.huntaze.com
APP_VERSION=1.0.0

# ====================
# DATABASE (PostgreSQL)
# ====================
DATABASE_URL="postgresql://huntaze_prod:STRONG_PASSWORD_HERE@your-db-host:5432/huntaze_production?schema=public&sslmode=require"

# ====================
# REDIS CACHE
# ====================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DB=0
REDIS_TLS=true

# ====================
# AUTHENTICATION & SECURITY
# ====================
# Generate with: openssl rand -base64 64
JWT_SECRET=GENERATE_64_CHAR_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_64_CHAR_STRING
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=GENERATE_ANOTHER_64_CHAR_STRING

# Encryption (exactly 32 characters)
# Generate with: openssl rand -base64 32 | head -c 32
ENCRYPTION_KEY=EXACTLY_32_CHARACTERS_HERE______
BACKUP_ENCRYPTION_KEY=DIFFERENT_32_CHARS_HERE_________

# ====================
# AZURE OPENAI (REQUIRED)
# ====================
AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE.openai.azure.com/
AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_KEY
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# ====================
# STRIPE PAYMENTS (REQUIRED)
# ====================
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY

# Create these in Stripe Dashboard
STRIPE_STARTER_MONTHLY_PRICE_ID=price_YOUR_STARTER_MONTHLY_ID
STRIPE_STARTER_YEARLY_PRICE_ID=price_YOUR_STARTER_YEARLY_ID
STRIPE_GROWTH_MONTHLY_PRICE_ID=price_YOUR_GROWTH_MONTHLY_ID
STRIPE_GROWTH_YEARLY_PRICE_ID=price_YOUR_GROWTH_YEARLY_ID
STRIPE_SCALE_MONTHLY_PRICE_ID=price_YOUR_SCALE_MONTHLY_ID
STRIPE_SCALE_YEARLY_PRICE_ID=price_YOUR_SCALE_YEARLY_ID

# ====================
# EMAIL SERVICE (AWS SES)
# ====================
EMAIL_FROM=noreply@huntaze.com
EMAIL_FROM_NAME="Huntaze Platform"

# AWS SES Configuration (uses same AWS credentials as S3)
AWS_SES_REGION=us-east-1
# Note: AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY are already defined above for S3

# Fallback SMTP (if SES not available)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# ====================
# AWS S3 STORAGE (REQUIRED)
# ====================
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=huntaze-uploads-prod
BACKUP_S3_BUCKET=huntaze-backups-prod

# ====================
# MONITORING & ANALYTICS
# ====================
# Sentry (Error Tracking)
SENTRY_DSN=https://YOUR_KEY@o123456.ingest.sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production

# PostHog (Analytics)
POSTHOG_API_KEY=phc_YOUR_POSTHOG_PROJECT_API_KEY
POSTHOG_HOST=https://app.posthog.com

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ====================
# SECURITY & COMPLIANCE
# ====================
# CORS (comma-separated origins)
CORS_ORIGIN=https://app.huntaze.com,https://huntaze.com

# Rate Limiting
RATE_LIMIT_TTL=900
RATE_LIMIT_MAX=100

# DMCA Protection
DMCA_API_KEY=YOUR_DMCA_SERVICE_KEY
DMCA_WEBHOOK_URL=https://app.huntaze.com/api/webhooks/dmca

# Content Safety (Optional)
# CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
# CONTENT_SAFETY_KEY=YOUR_CONTENT_SAFETY_KEY

# ====================
# FEATURES & FLAGS
# ====================
FEATURE_AI_ASSISTANT=true
FEATURE_DMCA_PROTECTION=true
FEATURE_ANALYTICS=true
FEATURE_BULK_MESSAGING=true

# ====================
# QUEUE CONFIGURATION
# ====================
QUEUE_REDIS_HOST=your-redis-host
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# ====================
# BACKUP CONFIGURATION
# ====================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# KMS for encryption (AWS)
AWS_KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012

# ====================
# COMPLIANCE
# ====================
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true

# ====================
# PRODUCTION OPTIMIZATIONS
# ====================
LOG_LEVEL=warn
PRETTY_LOG=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com https://app.posthog.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.stripe.com https://app.posthog.com wss://app.huntaze.com; frame-src 'self' https://js.stripe.com; object-src 'none';"

# ====================
# MONITORING & OBSERVABILITY
# ====================
OPENTELEMETRY_ENABLED=true
OPENTELEMETRY_ENDPOINT=http://your-otel-collector:4318
OPENTELEMETRY_SERVICE_NAME=huntaze-platform

# ====================
# SUPPORT & NOTIFICATIONS
# ====================
SUPPORT_EMAIL=support@huntaze.com
SUPPORT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ====================
# DEPLOYMENT
# ====================
# For Vercel
VERCEL_URL=https://app.huntaze.com
VERCEL_ENV=production

# For custom deployments
DEPLOYMENT_ENV=production
DEPLOYMENT_REGION=us-east-1

# ====================
# WEBHOOK SECRETS
# ====================
WEBHOOK_SECRET=GENERATE_RANDOM_WEBHOOK_SECRET
OF_WEBHOOK_SECRET=GENERATE_DIFFERENT_SECRET

# ====================
# END OF CONFIGURATION
# ====================
# Remember to:
# 1. Generate all secrets with strong random values
# 2. Set up all third-party services
# 3. Test all integrations before launch
# 4. Enable monitoring and alerts
# 5. Review security settings