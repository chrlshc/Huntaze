{
  "manifest_version": 3,
  "name": "Huntaze OF Bridge",
  "description": "Capture sécurisée de session OnlyFans depuis of-connect et envoi chiffré vers l’API Huntaze.",
  "version": "0.1.0",
  "minimum_chrome_version": "116",
  "permissions": [
    "cookies",
    "storage",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "https://onlyfans.com/*",
    "https://*.onlyfans.com/*",
    "https://app.huntaze.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.huntaze.com/of-connect*",
        "http://localhost:3000/of-connect*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "incognito": "split",
  "action": {
    "default_title": "Huntaze OF Bridge"
  }
}
