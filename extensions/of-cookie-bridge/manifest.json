{
  "manifest_version": 3,
  "name": "OF Cookie Bridge",
  "version": "0.1.0",
  "permissions": ["cookies", "storage", "tabs"],
  "host_permissions": [
    "https://onlyfans.com/*",
    "https://*.onlyfans.com/*",
    "https://app.huntaze.com/*",
    "https://*.huntaze.com/*",
    "https://*.amplifyapp.com/*",
    "http://localhost:3000/*"
  ],
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": [
        "https://app.huntaze.com/of-connect*",
        "https://*.huntaze.com/of-connect*",
        "https://*.amplifyapp.com/of-connect*",
        "http://localhost:3000/of-connect*"
      ],
      "js": ["pairing.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_title": "OF Cookie Bridge" }
}
