# Huntaze configuration for Bright Data and DM system
# Copy this file to .env to use Huntaze defaults

# === BRIGHT DATA CONFIGURATION ===
BRIGHT_DATA_CUSTOMER_ID=c_xxxxxxxx  # Replace with your Customer ID
BRIGHT_DATA_PASSWORD=xxxxxxxxxxxx   # Replace with your password

# Country proxies
BRIGHT_DATA_PROXY_FR=http://${BRIGHT_DATA_CUSTOMER_ID}:${BRIGHT_DATA_PASSWORD}@brd.superproxy.io:22225
BRIGHT_DATA_PROXY_US=http://${BRIGHT_DATA_CUSTOMER_ID}:${BRIGHT_DATA_PASSWORD}@brd.superproxy.io:22225
BRIGHT_DATA_PROXY_UK=http://${BRIGHT_DATA_CUSTOMER_ID}:${BRIGHT_DATA_PASSWORD}@brd.superproxy.io:22225
BRIGHT_DATA_PROXY_CA=http://${BRIGHT_DATA_CUSTOMER_ID}:${BRIGHT_DATA_PASSWORD}@brd.superproxy.io:22225
BRIGHT_DATA_PROXY_AU=http://${BRIGHT_DATA_CUSTOMER_ID}:${BRIGHT_DATA_PASSWORD}@brd.superproxy.io:22225

# Active countries configuration
BRIGHT_DATA_ACTIVE_COUNTRIES=us,uk
BRIGHT_DATA_COUNTRY_ROTATION=true
BRIGHT_DATA_ROTATION_INTERVAL=300  # Rotate every 5 minutes

# === INSTAGRAM ACCOUNTS ===
# Instagram accounts for automation (3 accounts = 150 DMs/day)
INSTAGRAM_ACCOUNT_1_USERNAME=huntaze_promo1
INSTAGRAM_ACCOUNT_1_PASSWORD=your_password_here
INSTAGRAM_ACCOUNT_1_PROXY=BRIGHT_DATA_PROXY_US

INSTAGRAM_ACCOUNT_2_USERNAME=huntaze_promo2
INSTAGRAM_ACCOUNT_2_PASSWORD=your_password_here
INSTAGRAM_ACCOUNT_2_PROXY=BRIGHT_DATA_PROXY_UK

INSTAGRAM_ACCOUNT_3_USERNAME=huntaze_promo3
INSTAGRAM_ACCOUNT_3_PASSWORD=your_password_here
INSTAGRAM_ACCOUNT_3_PROXY=BRIGHT_DATA_PROXY_US

# === HUNTAZE SPECIFIC SETTINGS ===
# Optimized targeting for OF
TARGET_HASHTAGS=#onlyfans,#onlyfansgirl,#onlyfanspromo,#onlyfansmodel,#onlyfanscreator
TARGET_FOLLOWER_RANGE=5000,100000
TARGET_ENGAGEMENT_MIN=3.0
TARGET_BIO_KEYWORDS=OF,OnlyFans,link in bio,DM me,Top %,exclusive content

# Daily limits per account
DAILY_DM_LIMIT=50
HOURLY_DM_LIMIT=6
DM_DELAY_MIN=180  # 3 minutes minimum between DMs
DM_DELAY_MAX=420  # 7 minutes maximum

# === LLM CONFIGURATION ===
# Azure OpenAI (recommended if you have Azure credits)
USE_AZURE_OPENAI=false
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_DEPLOYMENT=gpt-4-turbo
AZURE_OPENAI_API_VERSION=2024-02-01

# OpenAI Direct (alternative)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Claude/Anthropic (alternative)
USE_ANTHROPIC=false
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# === DATABASE ===
DATABASE_URL=postgresql://huntaze:huntaze_password@localhost:5432/huntaze_db
REDIS_URL=redis://localhost:6379/0

# === MONITORING & ANALYTICS ===
# Webhooks for conversion tracking
WEBHOOK_DEMO_SCHEDULED=https://your-webhook.com/demo-scheduled
WEBHOOK_TRIAL_STARTED=https://your-webhook.com/trial-started
WEBHOOK_CUSTOMER_CONVERTED=https://your-webhook.com/customer-converted

# Metrics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://your-analytics.com/api/events
TRACK_REVENUE_METRICS=true

# === SAFETY & COMPLIANCE ===
# Safety limits
MAX_DAILY_MESSAGES_TOTAL=150
ENABLE_HUMAN_REVIEW=true
HUMAN_REVIEW_THRESHOLD=0.7  # Minimum confidence score
PAUSE_ON_NEGATIVE_RESPONSE=true
BLACKLIST_KEYWORDS=scam,fake,report,spam,blocked

# === SCHEDULING ===
# Optimal active hours (UTC)
ACTIVE_HOURS_START=14  # 14:00 UTC
ACTIVE_HOURS_END=23    # 23:00 UTC
ACTIVE_DAYS=1,2,3,4,5,6,7  # Every day
PAUSE_ON_WEEKENDS=false

# === PERFORMANCE ===
# Optimisations
ENABLE_CACHING=true
CACHE_TTL=3600
PARALLEL_ACCOUNTS=true
MAX_CONCURRENT_OPERATIONS=3

# === DEBUG ===
DEBUG_MODE=false
LOG_LEVEL=info
SAVE_CONVERSATION_HISTORY=true
