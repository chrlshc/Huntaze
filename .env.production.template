# ============================================
# HUNTAZE - Production Environment Variables
# ============================================
# Copy this file and fill in your actual values
# Add these to AWS Amplify Console > Environment Variables

# ============================================
# CORE APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://app.huntaze.com
AMPLIFY_ENV=production

# ============================================
# DATABASE (PostgreSQL via RDS)
# ============================================
# Use the encrypted instance endpoint from AWS verification
DATABASE_URL=postgresql://username:password@huntaze-postgres-production-encrypted.c2ryoow8c5m4.us-east-1.rds.amazonaws.com:5432/huntaze?sslmode=require

# ============================================
# REDIS (ElastiCache)
# ============================================
# Using ioredis (recommended for ElastiCache)
REDIS_HOST=huntaze-redis-production.asmyhp.0001.use1.cache.amazonaws.com
REDIS_PORT=6379

# Alternative: Using Upstash Redis (if you switch to Upstash)
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token-here

# ============================================
# AUTHENTICATION (NextAuth v5)
# ============================================
NEXTAUTH_URL=https://app.huntaze.com
NEXTAUTH_SECRET=your-super-secret-key-min-32-characters-here
AUTH_TRUST_HOST=true

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Provider (Magic Links via AWS SES)
EMAIL_FROM=noreply@huntaze.com
EMAIL_SERVER_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-ses-smtp-username
EMAIL_SERVER_PASSWORD=your-ses-smtp-password

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-min-32-characters

# ============================================
# AWS SERVICES
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 for file storage
S3_BUCKET_NAME=huntaze-assets
S3_REGION=us-east-1

# AWS SES for Magic Link Emails
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@huntaze.com
AWS_SES_FROM_NAME=Huntaze
# Note: AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY are already configured above

# CloudWatch for logging
CLOUDWATCH_LOG_GROUP=/aws/amplify/huntaze-production
CLOUDWATCH_REGION=us-east-1

# ============================================
# VPC CONFIGURATION (for Amplify Compute)
# ============================================
LAMBDA_SECURITY_GROUP_ID=sg-xxxxxxxxx
PRIVATE_SUBNET_1_ID=subnet-xxxxxxxx
PRIVATE_SUBNET_2_ID=subnet-yyyyyyyy

# ============================================
# AI SERVICES
# ============================================
# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI (if used)
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# SOCIAL MEDIA INTEGRATIONS
# ============================================
# Instagram
IG_PAGE_TOKEN=your-instagram-page-token
IG_USER_ID=your-instagram-user-id

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=https://app.huntaze.com/api/auth/callback/tiktok

# Reddit
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_REDIRECT_URI=https://app.huntaze.com/api/auth/callback/reddit
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# ============================================
# ONLYFANS INTEGRATION
# ============================================
# Session Management
OF_SESSION_KEY=your-32-character-encryption-key-here
OF_SESSIONS_BACKEND=aws

# AWS Resources for OnlyFans
OF_AWS_REGION=us-east-1
OF_DDB_SESSIONS_TABLE=HuntazeOfSessions
OF_DDB_FAN_CAPS_TABLE=HuntazeFanCaps
OF_KMS_KEY_ID=your-kms-key-id
OF_SQS_SEND_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/huntaze-of-send-queue

# Proxy Configuration (Bright Data)
BRIGHT_DATA_CUSTOMER=your-customer-id
BRIGHT_DATA_PASSWORD=your-password
BRIGHT_DATA_ZONE=residential

# ============================================
# STRIPE PAYMENTS
# ============================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# RATE LIMITING & SECURITY
# ============================================
# Rate limiter uses Redis (configured above)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SMART_ONBOARDING=true
ENABLE_AI_FEATURES=true
ENABLE_BETA_FEATURES=false

# ============================================
# OPTIONAL SERVICES
# ============================================
# Push Notifications (VAPID)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret-for-external-services
