# ============================================================================
# HUNTAZE BETA - PRODUCTION ENVIRONMENT VARIABLES
# ============================================================================
# Template pour le déploiement production
# Copier ce fichier vers .env.production.local et remplir les valeurs
# ============================================================================

# ============================================================================
# DATABASE (CRITIQUE)
# ============================================================================
# PostgreSQL connection string (RDS)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://huntaze:PASSWORD@huntaze-beta-db.xxx.us-east-2.rds.amazonaws.com:5432/huntaze"

# ============================================================================
# CACHE (CRITIQUE)
# ============================================================================
# Redis connection string (ElastiCache)
# Format: redis://host:port
REDIS_URL="redis://huntaze-beta-redis.xxx.cache.amazonaws.com:6379"

# ============================================================================
# AUTHENTICATION (CRITIQUE)
# ============================================================================
# NextAuth configuration
NEXTAUTH_URL="https://app.huntaze.com"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here-generate-with-openssl"

# ============================================================================
# ENCRYPTION (CRITIQUE)
# ============================================================================
# 32-character encryption key for AES-256
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-character-encryption-key-here"
TOKEN_ENCRYPTION_KEY="your-32-character-token-encryption-key"

# ============================================================================
# AWS SERVICES (CRITIQUE)
# ============================================================================
# AWS Region
AWS_REGION="us-east-2"

# S3 Bucket for assets
AWS_S3_BUCKET="huntaze-beta-assets"
CDN_URL="https://huntaze-beta-assets.s3.us-east-2.amazonaws.com"

# AWS Credentials (use IAM roles in production, not keys)
# AWS_ACCESS_KEY_ID="your-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# ============================================================================
# AI ROUTER (HAUTE PRIORITÉ)
# ============================================================================
# Lambda AI Router URL (API Gateway)
AI_ROUTER_URL="https://xxx.execute-api.us-east-2.amazonaws.com"

# ============================================================================
# AZURE AI FOUNDRY (HAUTE PRIORITÉ)
# ============================================================================
# Azure AI Foundry Chat Endpoint
AZURE_AI_CHAT_ENDPOINT="https://your-endpoint.eastus2.inference.ai.azure.com"
AZURE_AI_CHAT_KEY="your-azure-ai-api-key"

# DeepSeek-R1 (Reasoning)
AZURE_DEEPSEEK_R1_ENDPOINT="https://deepseek-r1.eastus2.models.ai.azure.com"
AZURE_DEEPSEEK_R1_DEPLOYMENT="deepseek-r1-reasoning"

# DeepSeek-V3 (Generation)
AZURE_DEEPSEEK_V3_ENDPOINT="https://deepseek-v3.eastus2.models.ai.azure.com"
AZURE_DEEPSEEK_V3_DEPLOYMENT="deepseek-v3-generation"

# Phi-4 Multimodal (Vision)
AZURE_PHI4_MULTIMODAL_ENDPOINT="https://phi-4-multimodal.eastus2.models.ai.azure.com"
AZURE_PHI4_MULTIMODAL_KEY="your-phi4-multimodal-api-key"
AZURE_PHI4_MULTIMODAL_DEPLOYMENT="phi-4-multimodal-instruct"

# Azure Speech (Transcription)
AZURE_SPEECH_KEY="your-azure-speech-key"
AZURE_SPEECH_REGION="eastus2"
AZURE_SPEECH_ENDPOINT="https://eastus2.api.cognitive.microsoft.com/"

# Shared API key
AZURE_AI_API_KEY="your-azure-ai-api-key"

# Regional configuration
AZURE_AI_REGION="eastus2"
AZURE_AI_FAILOVER_REGIONS="westus2,northeurope"

# ============================================================================
# UPSTASH QSTASH (HAUTE PRIORITÉ)
# ============================================================================
# QStash Token (for publishing messages)
QSTASH_TOKEN="qstash_xxx"

# QStash Signing Keys (for verifying webhooks)
QSTASH_CURRENT_SIGNING_KEY="sig_xxx"
QSTASH_NEXT_SIGNING_KEY="sig_xxx"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS (MOYENNE PRIORITÉ)
# ============================================================================
# TikTok
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_REDIRECT_URI="https://app.huntaze.com/auth/tiktok/callback"
NEXT_PUBLIC_TIKTOK_REDIRECT_URI="https://app.huntaze.com/auth/tiktok/callback"

# Instagram/Facebook
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"
INSTAGRAM_REDIRECT_URI="https://app.huntaze.com/auth/instagram/callback"
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI="https://app.huntaze.com/auth/instagram/callback"

# Reddit
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"
REDDIT_REDIRECT_URI="https://app.huntaze.com/auth/reddit/callback"
NEXT_PUBLIC_REDDIT_REDIRECT_URI="https://app.huntaze.com/auth/reddit/callback"

# Twitter/X
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"

# ============================================================================
# CONTENT SCRAPING (MOYENNE PRIORITÉ)
# ============================================================================
# Apify (for social media scraping)
APIFY_API_TOKEN="apify_api_your-token-here"
APIFY_WEBHOOK_SECRET="your-apify-webhook-secret"

# ============================================================================
# PROXIES (MOYENNE PRIORITÉ)
# ============================================================================
# Bright Data (for OnlyFans automation)
BRIGHT_DATA_CUSTOMER="your-bright-data-customer"
BRIGHT_DATA_PASSWORD="your-bright-data-password"
BRIGHT_DATA_ZONE="residential"

# ============================================================================
# MONITORING (MOYENNE PRIORITÉ)
# ============================================================================
# CloudWatch
CLOUDWATCH_LOG_GROUP="/aws/huntaze/production"
CLOUDWATCH_NAMESPACE="Huntaze/Production"

# Alerts
ALERT_EMAIL="alerts@huntaze.com"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/XXX/YYY/ZZZ"

# ============================================================================
# ANALYTICS (BASSE PRIORITÉ)
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry Error Tracking
SENTRY_DSN="your-sentry-dsn"

# ============================================================================
# PAYMENT PROCESSING (BASSE PRIORITÉ)
# ============================================================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NODE_ENV="production"
ENABLE_RATE_LIMITING="true"
ENABLE_CACHING="true"
NEXT_PUBLIC_DEBUG="false"

