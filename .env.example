# ============================================================================
# HUNTAZE ENVIRONMENT CONFIGURATION
# ============================================================================
# This file contains all possible environment variables for the Huntaze platform.
# Copy this file to .env.local and fill in your actual values.
# NEVER commit files with real credentials (.env.local, .env.production, etc.)
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/huntaze_dev"

# ============================================================================
# APPLICATION
# ============================================================================
# Environment: development, production, test
NODE_ENV="development"

# API wiring:
# - real (default): call internal APIs normally
# - mock: enable MSW fixtures (demo/video mode)
API_MODE="real"

# Public application URL (used for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000"

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================
# NextAuth configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# JWT Secret (if using custom JWT)
JWT_SECRET="your-jwt-secret-here"

# OAuth state CSRF protection (recommended for production)
# Generate with: openssl rand -hex 32
OAUTH_STATE_SECRET="your-oauth-state-secret"

# Internal callback/webhook secrets (do not expose publicly)
DATA_DELETION_SECRET="your-data-deletion-secret"
WORKER_SECRET="your-worker-secret"
CRM_WEBHOOK_SECRET="your-crm-webhook-secret"

# ============================================================================
# ENCRYPTION
# ============================================================================
# 32-character encryption key for AES-256
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY="your-32-character-encryption-key-here-use-openssl"
ENCRYPTION_KEY="your-32-character-encryption-key"

# ============================================================================
# AWS CREDENTIALS
# ============================================================================
# NEVER commit real AWS credentials!
# Use AWS CLI profiles or IAM roles in production
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_SESSION_TOKEN="your-session-token-optional"
AWS_REGION="us-east-1"

# ============================================================================
# AWS SERVICES
# ============================================================================
# S3 Asset Storage
AWS_S3_BUCKET="huntaze-beta-assets"
CDN_URL="https://huntaze-beta-assets.s3.amazonaws.com"
# Public S3 access for workers (legacy aliases)
S3_BUCKET="huntaze-content"
S3_REGION="us-east-1"

# SQS Queue
AWS_SQS_QUEUE_URL="https://sqs.us-east-1.amazonaws.com/account-id/queue-name"

# Lambda Functions
AWS_LAMBDA_FUNCTION_NAME="your-function-name"

# CloudWatch Monitoring
CLOUDWATCH_LOG_GROUP="/aws/huntaze/production"
CLOUDWATCH_NAMESPACE="Huntaze/Production"
ALERT_EMAIL="alerts@huntaze.com"

# Slack Alerts (optional)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/XXX/YYY/ZZZ"

# Hydration monitoring (optional)
HYDRATION_MONITORING_ENDPOINT="https://monitoring.example.com/hydration"
HYDRATION_MONITORING_API_KEY="your-hydration-monitoring-api-key"
HYDRATION_WEBHOOK_URL="https://webhook.example.com/hydration"

# ElastiCache Redis (for caching and rate limiting)
ELASTICACHE_REDIS_HOST="your-redis-host.cache.amazonaws.com"
ELASTICACHE_REDIS_PORT="6379"
REDIS_URL="redis://localhost:6379"

# ============================================================================
# AI SERVICES
# ============================================================================
# Google Gemini AI (Primary AI provider)
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"
GEMINI_MODEL="gemini-2.0-flash-exp"

# OpenAI (Alternative/Legacy)
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# LLM provider selector (legacy draft generation)
LLM_PROVIDER="claude"
CLAUDE_API_KEY="sk-ant-your-claude-api-key"

# ============================================================================
# PROXIES (OnlyFans automation)
# ============================================================================
BRIGHT_DATA_CUSTOMER="your-bright-data-customer"
BRIGHT_DATA_PASSWORD="your-bright-data-password"
BRIGHT_DATA_ZONE="residential"
# Comma-separated proxy URLs (optional)
PROXY_LIST="http://user:pass@proxy1.example.com:7000,http://user:pass@proxy2.example.com:7000"

# ============================================================================
# AI ROUTER (Azure AI Foundry)
# ============================================================================
# AI Router URL - Python router service for Azure AI Foundry models
# Deployment options:
#   - AWS ECS: http://ai-router.internal:8000 (internal VPC)
#   - AWS Lambda: https://xxx.execute-api.us-east-1.amazonaws.com/prod
#   - API Gateway: https://ai-router.huntaze.com
#   - Local development: http://localhost:8000
AI_ROUTER_URL="http://localhost:8000"

# Azure AI Foundry Configuration (for direct access, used by router)
AZURE_AI_CHAT_ENDPOINT="https://your-endpoint.eastus2.inference.ai.azure.com"
AZURE_AI_CHAT_KEY="your-azure-ai-api-key"

# ============================================================================
# AZURE AI FOUNDRY - SERVERLESS ENDPOINTS
# ============================================================================
# DeepSeek-R1 - Primary model for complex reasoning (math, coding)
AZURE_DEEPSEEK_ENDPOINT="https://deepseek-r1-endpoint.eastus2.models.ai.azure.com"
AZURE_DEEPSEEK_API_KEY="your-deepseek-api-key"

# Phi-4-mini - Classifier model for routing decisions
AZURE_PHI4_ENDPOINT="https://phi-4-mini-endpoint.eastus2.models.ai.azure.com"
AZURE_PHI4_API_KEY="your-phi4-api-key"

# Llama-3.3-70B - General purpose model (requires Marketplace subscription)
# AZURE_LLAMA_ENDPOINT="https://llama-33-70b-endpoint.eastus2.models.ai.azure.com"
# AZURE_LLAMA_API_KEY="your-llama-api-key"

# Mistral-Large-2411 - Creative/chat model (requires Marketplace subscription)
# AZURE_MISTRAL_ENDPOINT="https://mistral-large-endpoint.eastus2.models.ai.azure.com"
# AZURE_MISTRAL_API_KEY="your-mistral-api-key"

# Azure AI Foundry Region
AZURE_AI_FOUNDRY_REGION="eastus2"

# ============================================================================
# AZURE AI FOUNDRY - CONTENT TRENDS AI ENGINE
# ============================================================================
# DeepSeek-R1 - Reasoning model for viral analysis (chain-of-thought)
# Pricing: $0.00135/1K input, $0.0054/1K output
AZURE_DEEPSEEK_R1_ENDPOINT="https://deepseek-r1.eastus2.models.ai.azure.com"
AZURE_DEEPSEEK_R1_DEPLOYMENT="deepseek-r1-reasoning"

# DeepSeek-V3 - MoE generation model for content assets (hooks, scripts)
# Pricing: $0.00114/1K input, $0.00456/1K output
AZURE_DEEPSEEK_V3_ENDPOINT="https://deepseek-v3.eastus2.models.ai.azure.com"
AZURE_DEEPSEEK_V3_DEPLOYMENT="deepseek-v3-generation"

# Llama 3.2 Vision - Multimodal analysis for video frames (LEGACY)
# Pricing: $0.40/1M input, $0.40/1M output
# ⚠️ Image+text prompts must be in English
# ⚠️ Check EU license restrictions if your company is EU-based
# ⚠️ DEPRECATED: Use Phi-4 Multimodal instead
AZURE_LLAMA_VISION_ENDPOINT="https://llama-32-vision.eastus2.models.ai.azure.com"
AZURE_LLAMA_VISION_DEPLOYMENT="llama-32-vision"

# Phi-4 Multimodal - Unified multimodal analysis (text + images + audio context)
# Replaces Llama Vision with 128K context window
# Features: OCR, facial expressions, editing dynamics, timeline analysis
AZURE_PHI4_MULTIMODAL_ENDPOINT="https://phi-4-multimodal-endpoint.eastus2.models.ai.azure.com"
AZURE_PHI4_MULTIMODAL_KEY="your-phi4-multimodal-api-key"
AZURE_PHI4_MULTIMODAL_DEPLOYMENT="phi-4-multimodal-instruct"

# Azure Speech Batch Transcription - Cost-efficient audio transcription
# Pricing: $0.18/hour
# Features: Speaker diarization, word-level timestamps, timeline alignment
AZURE_SPEECH_KEY="your-azure-speech-key"
AZURE_SPEECH_REGION="eastus2"
AZURE_SPEECH_ENDPOINT="https://eastus2.api.cognitive.microsoft.com/"

# Shared API key for all Content Trends models
AZURE_AI_API_KEY="your-azure-ai-api-key"

# Azure Key Vault (optional, for Content Trends secrets)
AZURE_KEY_VAULT_URL="https://your-vault-name.vault.azure.net/"
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_REDIRECT_URI="https://huntaze.com/auth/azure/callback"

# Use Managed Identity instead of API key (recommended for production)
AZURE_USE_MANAGED_IDENTITY="false"
AZURE_TENANT_ID="your-tenant-id"

# Regional configuration
AZURE_AI_REGION="eastus2"
AZURE_AI_FAILOVER_REGIONS="westus2,northeurope"

# Rate limiting
AZURE_AI_RPM="100"
AZURE_AI_TPM="100000"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - INSTAGRAM/FACEBOOK
# ============================================================================
# Facebook App Configuration (includes Instagram)
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_CLIENT_TOKEN="your-facebook-client-token"

# Instagram OAuth
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"
INSTAGRAM_REDIRECT_URI="https://huntaze.com/auth/instagram/callback"
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI="https://huntaze.com/auth/instagram/callback"
INSTAGRAM_DEAUTH_CALLBACK_URL="https://huntaze.com/auth/deauthorize"
INSTAGRAM_DATA_DELETION_URL="https://huntaze.com/data-deletion"

# Instagram Webhooks (Meta)
# Used by: POST /api/webhooks/instagram + GET challenge verification
INSTAGRAM_WEBHOOK_SECRET="your-instagram-webhook-secret"
INSTAGRAM_WEBHOOK_VERIFY_TOKEN="your-instagram-webhook-verify-token"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - TIKTOK
# ============================================================================
# TikTok App Configuration
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_REDIRECT_URI="https://huntaze.com/auth/tiktok/callback"
NEXT_PUBLIC_TIKTOK_REDIRECT_URI="https://huntaze.com/auth/tiktok/callback"

# TikTok Sandbox Mode (set to true for testing)
TIKTOK_SANDBOX_MODE="false"

# TikTok Webhooks
# Used by: POST /api/webhooks/tiktok
TIKTOK_WEBHOOK_SECRET="your-tiktok-webhook-secret"

# For local development with ngrok:
# NEXT_PUBLIC_TIKTOK_REDIRECT_URI="https://your-ngrok-url.ngrok.io/auth/tiktok/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - REDDIT
# ============================================================================
# Reddit API Configuration
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"
REDDIT_USER_AGENT="Huntaze:v1.0.0 (by /u/YourUsername)"
REDDIT_REDIRECT_URI="https://huntaze.com/auth/reddit/callback"
NEXT_PUBLIC_REDDIT_REDIRECT_URI="https://huntaze.com/auth/reddit/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - THREADS
# ============================================================================
# Threads uses Instagram's API infrastructure
THREADS_CLIENT_ID="your-threads-client-id"
THREADS_CLIENT_SECRET="your-threads-client-secret"
NEXT_PUBLIC_THREADS_REDIRECT_URI="https://huntaze.com/auth/threads/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - TWITTER/X
# ============================================================================
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"
TWITTER_USER_ID="your-twitter-user-id-optional"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - GOOGLE
# ============================================================================
# Google OAuth (for YouTube, etc.)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
NEXT_PUBLIC_GOOGLE_REDIRECT_URI="https://huntaze.com/auth/google/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - ONLYFANS
# ============================================================================
# OnlyFans API Configuration
ONLYFANS_API_KEY="your-onlyfans-api-key"

# OnlyFans Webhooks
# Used by: POST /api/onlyfans/webhooks
ONLYFANS_WEBHOOK_SECRET="your-onlyfans-webhook-secret"

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry Error Tracking (optional)
SENTRY_DSN="your-sentry-dsn"

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
ENABLE_RATE_LIMITING="true"
ENABLE_CACHING="true"
NEXT_PUBLIC_DEBUG="false"

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Skip environment validation (use with caution)
SKIP_ENV_VALIDATION="false"

# Test mode
TEST_MODE="false"

# Logging level: debug, info, warn, error
LOG_LEVEL="info"

# ============================================================================
# CONTENT TRENDS - APIFY SCRAPING
# ============================================================================
# Apify API Token for social media scraping
# Get your token at: https://console.apify.com/account/integrations
APIFY_API_TOKEN="apify_api_your-token-here"
APIFY_WEBHOOK_SECRET="your-apify-webhook-secret"

