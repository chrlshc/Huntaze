# Pipeline modes per platform: mock | dry_run | shadow | live
PIPELINE_MODE_INSTAGRAM=shadow
PIPELINE_MODE_TIKTOK=shadow
PIPELINE_MODE_REDDIT=shadow
PIPELINE_MODE_TWITTER=shadow

# Fast feature flags (override above if set)
# Setting to `true` forces live; `false` forces mock.
INSTAGRAM=
TIKTOK=
REDDIT=
TWITTER=
REDDIT_CANARY_PERCENT=0
REDDIT_CANARY_SALT=reddit-canary-v1

# Optional kill switches / budgets
PUBLISH_ENABLED_INSTAGRAM=true
PUBLISH_ENABLED_TIKTOK=true
PUBLISH_ENABLED_REDDIT=true

# Daily budgets (per 24h)
MAX_POSTS_IG=20
MAX_POSTS_TT=10
MAX_POSTS_REDDIT=50

# Reddit test subreddit for shadow mode
REDDIT_TEST_SUB=YourSandboxSubreddit

# Connectors tokens (fill for live/shadow)
IG_USER_ID=
IG_PAGE_TOKEN=
TT_USER_TOKEN=
REDDIT_TOKEN=
REDDIT_SUB=
REDIS_URL=redis://localhost:6379

# Tests
# Set to 1 to enable Undici MockAgent (no real network) for unit/integration tests
USE_UNDICI_MOCKS=

# Webhooks
# TikTok webhook secret (from TikTok Developer Portal)
TIKTOK_WEBHOOK_SECRET=

# Instagram/Meta webhook secret (App Secret from Meta Developer Portal)
INSTAGRAM_WEBHOOK_SECRET=

# Worker authentication (for /api/workers/webhooks endpoint)
WORKER_SECRET=

# Debug tooling (protects /debug and /api/debug endpoints)
# Set a long random token; pass as `?token=...` or header `x-debug-token`.
DEBUG_TOKEN=
DEBUG_USER=
DEBUG_PASS=

# Twitter Insights
ENABLE_TWITTER=0
TWITTER_BEARER_TOKEN=
TWITTER_USER_ID=
# Optional: comma-separated tweet ids to track
TWITTER_TRACK_TWEET_IDS=

# TikTok Insights
ENABLE_TIKTOK_INSIGHTS=0

# Instagram Insights
ENABLE_INSTAGRAM_INSIGHTS=0
IG_TRACK_MEDIA_IDS=

# AI Providers
# Select which provider the LLM router prefers: mock | openai | azure
LLM_PROVIDER=azure

# OpenAI
OPENAI_API_KEY=

# Azure OpenAI (or Entra ID via managed identity if you extend)
AZURE_OPENAI_ENDPOINT=https://huntaze-ai-hub-eus2.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_KEY=
# Optional API version (defaults to 2024-05-01-preview)
AZURE_OPENAI_API_VERSION=2024-05-01-preview
# Prefer the v1 Responses API (default ON in prod)
USE_AZURE_RESPONSES=

# Enable optional Azure smoke route
ENABLE_AZURE_AI=1

# Azure AI Hub / Project (optional, if using Azure AI Studio / Projects)
# Example for East US 2 hub: set endpoint to https://eastus2.api.azureml.ms
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_PROJECT_NAME=
AZURE_AI_PROJECT_ENDPOINT=

# Enable the Azure multi-agents planner (uses Azure OpenAI)
ENABLE_AZURE_AI_TEAM=1

# Agents proxy (optional)
ENABLE_AGENTS_PROXY=0
AGENTS_API_URL=
AGENTS_PROXY_TOKEN=

# EventBridge hooks (optional)
ENABLE_EVENTBRIDGE_HOOKS=0
EVENTBRIDGE_BUS_NAME=

# Admin token for maintenance endpoints (like outbox dispatcher)
ADMIN_TOKEN=
ADMIN_IP_ALLOWLIST=

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email (AWS SES)
FROM_EMAIL=noreply@huntaze.com
AWS_REGION=us-east-1

# App URL (for email links)
NEXT_PUBLIC_APP_URL=https://huntaze.com

# Token Encryption (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
TOKEN_ENCRYPTION_KEY=GENERATE_A_NEW_KEY_FOR_PRODUCTION

# TikTok OAuth
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
NEXT_PUBLIC_TIKTOK_REDIRECT_URI=https://huntaze.com/api/auth/tiktok/callback

# Instagram/Facebook OAuth
# Get these from Meta Developer Portal (https://developers.facebook.com)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI=https://huntaze.com/api/auth/instagram/callback

# Social Media OAuth Credentials
# TikTok OAuth
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
NEXT_PUBLIC_TIKTOK_REDIRECT_URI=http://localhost:3000/api/auth/tiktok/callback

# Instagram OAuth (uses Facebook OAuth)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/instagram/callback

# Reddit OAuth
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
NEXT_PUBLIC_REDDIT_REDIRECT_URI=http://localhost:3000/api/auth/reddit/callback

# Monitoring & Alerts
# Slack webhook URL for alert notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Alert check interval in seconds (default: 60)
ALERT_CHECK_INTERVAL=60

# OnlyFans Rate Limiter (AWS Infrastructure)
# Enable/disable rate limiting for OnlyFans messages
RATE_LIMITER_ENABLED=true
# SQS Queue URL for rate-limited messages
SQS_RATE_LIMITER_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/317805897534/huntaze-rate-limiter-queue
# SQS DLQ URL for failed messages
SQS_RATE_LIMITER_DLQ_URL=https://sqs.us-east-1.amazonaws.com/317805897534/huntaze-rate-limiter-queue-dlq
# Redis endpoint for token bucket state
REDIS_ENDPOINT=huntaze-redis-production.xxxxx.use1.cache.amazonaws.com:6379
# CloudWatch namespace for custom metrics
CLOUDWATCH_NAMESPACE=Huntaze/OnlyFans


# AI Agent System Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
AI_AGENT_RATE_LIMIT=60
AI_AGENT_TIMEOUT=30000

# Onboarding Feature Flags
# Enable/disable onboarding system globally
ONBOARDING_ENABLED=false

# Rollout percentage (0-100)
# 0 = disabled for all users
# 100 = enabled for all users
ONBOARDING_ROLLOUT_PERCENTAGE=0

# Comma-separated list of markets where onboarding is enabled
# Use '*' for all markets
ONBOARDING_MARKETS=*

# Comma-separated list of user IDs that always get onboarding (for testing)
ONBOARDING_USER_WHITELIST=
