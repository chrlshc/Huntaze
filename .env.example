# Pipeline modes per platform: mock | dry_run | shadow | live
PIPELINE_MODE_INSTAGRAM=shadow
PIPELINE_MODE_TIKTOK=shadow
PIPELINE_MODE_REDDIT=shadow
PIPELINE_MODE_TWITTER=shadow

# Fast feature flags (override above if set)
# Setting to `true` forces live; `false` forces mock.
INSTAGRAM=
TIKTOK=
REDDIT=
TWITTER=
REDDIT_CANARY_PERCENT=0
REDDIT_CANARY_SALT=reddit-canary-v1

# Optional kill switches / budgets
PUBLISH_ENABLED_INSTAGRAM=true
PUBLISH_ENABLED_TIKTOK=true
PUBLISH_ENABLED_REDDIT=true

# Daily budgets (per 24h)
MAX_POSTS_IG=20
MAX_POSTS_TT=10
MAX_POSTS_REDDIT=50

# Reddit test subreddit for shadow mode
REDDIT_TEST_SUB=YourSandboxSubreddit

# Connectors tokens (fill for live/shadow)
IG_USER_ID=
IG_PAGE_TOKEN=
TT_USER_TOKEN=
REDDIT_TOKEN=
REDDIT_SUB=
REDIS_URL=redis://localhost:6379

# Tests
# Set to 1 to enable Undici MockAgent (no real network) for unit/integration tests
USE_UNDICI_MOCKS=

# Webhooks
# TIKTOK_WEBHOOK_SECRET=your-secret

# Debug tooling (protects /debug and /api/debug endpoints)
# Set a long random token; pass as `?token=...` or header `x-debug-token`.
DEBUG_TOKEN=
DEBUG_USER=
DEBUG_PASS=

# Twitter Insights
ENABLE_TWITTER=0
TWITTER_BEARER_TOKEN=
TWITTER_USER_ID=
# Optional: comma-separated tweet ids to track
TWITTER_TRACK_TWEET_IDS=

# TikTok Insights
ENABLE_TIKTOK_INSIGHTS=0

# Instagram Insights
ENABLE_INSTAGRAM_INSIGHTS=0
IG_TRACK_MEDIA_IDS=

# AI Providers
# Select which provider the LLM router prefers: mock | openai | azure
LLM_PROVIDER=azure

# OpenAI
OPENAI_API_KEY=

# Azure OpenAI (or Entra ID via managed identity if you extend)
AZURE_OPENAI_ENDPOINT=https://huntaze-ai-hub-eus2.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_KEY=
# Optional API version (defaults to 2024-05-01-preview)
AZURE_OPENAI_API_VERSION=2024-05-01-preview
# Prefer the v1 Responses API (default ON in prod)
USE_AZURE_RESPONSES=

# Enable optional Azure smoke route
ENABLE_AZURE_AI=1

# Azure AI Hub / Project (optional, if using Azure AI Studio / Projects)
# Example for East US 2 hub: set endpoint to https://eastus2.api.azureml.ms
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_PROJECT_NAME=
AZURE_AI_PROJECT_ENDPOINT=

# Enable the Azure multi-agents planner (uses Azure OpenAI)
ENABLE_AZURE_AI_TEAM=1

# Agents proxy (optional)
ENABLE_AGENTS_PROXY=0
AGENTS_API_URL=
AGENTS_PROXY_TOKEN=

# EventBridge hooks (optional)
ENABLE_EVENTBRIDGE_HOOKS=0
EVENTBRIDGE_BUS_NAME=

# Admin token for maintenance endpoints (like outbox dispatcher)
ADMIN_TOKEN=
ADMIN_IP_ALLOWLIST=
# Disable all Azure OpenAI spend when set to 1 (library kill switch)
AZURE_BILLING_LOCK=1

# Token required to force real Azure smoke calls
AI_SMOKE_TOKEN=
