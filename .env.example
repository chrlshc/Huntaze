## Environment
NODE_ENV=production

## Application
NEXT_PUBLIC_APP_URL=https://huntaze.com
# API origin (no trailing slash). The frontend will call `${NEXT_PUBLIC_API_URL}/api/*`.
NEXT_PUBLIC_API_URL=https://api.huntaze.com

## Auth
# Must match the API's JWT secret if the middleware verifies tokens
JWT_SECRET=change-me-and-keep-in-sync-with-api

# If you use frontend-handled OAuth (app/auth/google/callback), set these:
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=https://huntaze.com/auth/google/callback

## Optional services
# Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
# Sentry
NEXT_PUBLIC_SENTRY_DSN=

## Optional infrastructure (only if used)
DATABASE_URL=
REDIS_URL=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

## Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=
NEXT_PUBLIC_STRIPE_PRICE_ID_ENTERPRISE=
 
## Email (choose one provider)
# Option A: AWS SES (recommended on AWS)
SES_FROM_EMAIL=
# Requires AWS_REGION and IAM credentials (or role) with ses:SendEmail
SES_CONFIG_SET=

# Option B: SMTP (e.g., SendGrid, Mailgun, Postmark)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Waitlist notifications
WAITLIST_NOTIFY_EMAILS=team@huntaze.com
WAITLIST_SEND_CONFIRM=false
