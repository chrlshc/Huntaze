# Environment
NODE_ENV=production

# Application
NEXT_PUBLIC_APP_URL=https://huntaze.com
NEXT_PUBLIC_API_BASE=https://api.huntaze.com

# Database (si nécessaire)
DATABASE_URL=postgresql://user:password@localhost:5432/huntaze

# Redis (si nécessaire)
REDIS_URL=redis://localhost:6379

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=huntaze-assets

# Analytics (optionnel)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (optionnel)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# Email (si nécessaire)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Stripe (si nécessaire)
STRIPE_SECRET_KEY=sk_live_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxx

# OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=https://huntaze.com/auth/google/callback
GOOGLE_CLIENT_SECRET=your_google_client_secret

NEXT_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id
NEXT_PUBLIC_APPLE_REDIRECT_URI=https://huntaze.com/auth/apple/callback
APPLE_PRIVATE_KEY=your_apple_private_key

NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_FACEBOOK_REDIRECT_URI=https://huntaze.com/auth/facebook/callback
FACEBOOK_APP_SECRET=your_facebook_app_secret