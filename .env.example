# ============================================================================
# HUNTAZE ENVIRONMENT CONFIGURATION
# ============================================================================
# This file contains all possible environment variables for the Huntaze platform.
# Copy this file to .env.local and fill in your actual values.
# NEVER commit files with real credentials (.env.local, .env.production, etc.)
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/huntaze_dev"

# ============================================================================
# APPLICATION
# ============================================================================
# Environment: development, production, test
NODE_ENV="development"

# Public application URL (used for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000"

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================
# NextAuth configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# JWT Secret (if using custom JWT)
JWT_SECRET="your-jwt-secret-here"

# ============================================================================
# ENCRYPTION
# ============================================================================
# 32-character encryption key for AES-256
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY="your-32-character-encryption-key-here-use-openssl"
ENCRYPTION_KEY="your-32-character-encryption-key"

# ============================================================================
# AWS CREDENTIALS
# ============================================================================
# NEVER commit real AWS credentials!
# Use AWS CLI profiles or IAM roles in production
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_SESSION_TOKEN="your-session-token-optional"
AWS_REGION="us-east-1"

# ============================================================================
# AWS SERVICES
# ============================================================================
# S3 Asset Storage
AWS_S3_BUCKET="huntaze-beta-assets"
CDN_URL="https://huntaze-beta-assets.s3.amazonaws.com"

# SQS Queue
AWS_SQS_QUEUE_URL="https://sqs.us-east-1.amazonaws.com/account-id/queue-name"

# Lambda Functions
AWS_LAMBDA_FUNCTION_NAME="your-function-name"

# CloudWatch Monitoring
CLOUDWATCH_LOG_GROUP="/aws/huntaze/production"
CLOUDWATCH_NAMESPACE="Huntaze/Production"
ALERT_EMAIL="alerts@huntaze.com"

# ElastiCache Redis (for caching and rate limiting)
ELASTICACHE_REDIS_HOST="your-redis-host.cache.amazonaws.com"
ELASTICACHE_REDIS_PORT="6379"
REDIS_URL="redis://localhost:6379"

# ============================================================================
# AI SERVICES
# ============================================================================
# Google Gemini AI (Primary AI provider)
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"
GEMINI_MODEL="gemini-2.0-flash-exp"

# OpenAI (Alternative/Legacy)
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - INSTAGRAM/FACEBOOK
# ============================================================================
# Facebook App Configuration (includes Instagram)
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_CLIENT_TOKEN="your-facebook-client-token"

# Instagram OAuth
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"
INSTAGRAM_REDIRECT_URI="https://huntaze.com/auth/instagram/callback"
NEXT_PUBLIC_INSTAGRAM_REDIRECT_URI="https://huntaze.com/auth/instagram/callback"
INSTAGRAM_DEAUTH_CALLBACK_URL="https://huntaze.com/auth/deauthorize"
INSTAGRAM_DATA_DELETION_URL="https://huntaze.com/data-deletion"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - TIKTOK
# ============================================================================
# TikTok App Configuration
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"
TIKTOK_REDIRECT_URI="https://huntaze.com/auth/tiktok/callback"
NEXT_PUBLIC_TIKTOK_REDIRECT_URI="https://huntaze.com/auth/tiktok/callback"

# TikTok Sandbox Mode (set to true for testing)
TIKTOK_SANDBOX_MODE="false"

# For local development with ngrok:
# NEXT_PUBLIC_TIKTOK_REDIRECT_URI="https://your-ngrok-url.ngrok.io/auth/tiktok/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - REDDIT
# ============================================================================
# Reddit API Configuration
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"
REDDIT_USER_AGENT="Huntaze:v1.0.0 (by /u/YourUsername)"
REDDIT_REDIRECT_URI="https://huntaze.com/auth/reddit/callback"
NEXT_PUBLIC_REDDIT_REDIRECT_URI="https://huntaze.com/auth/reddit/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - GOOGLE
# ============================================================================
# Google OAuth (for YouTube, etc.)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
NEXT_PUBLIC_GOOGLE_REDIRECT_URI="https://huntaze.com/auth/google/callback"

# ============================================================================
# SOCIAL MEDIA INTEGRATIONS - ONLYFANS
# ============================================================================
# OnlyFans API Configuration
ONLYFANS_API_KEY="your-onlyfans-api-key"

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry Error Tracking (optional)
SENTRY_DSN="your-sentry-dsn"

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
ENABLE_RATE_LIMITING="true"
ENABLE_CACHING="true"
NEXT_PUBLIC_DEBUG="false"

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Skip environment validation (use with caution)
SKIP_ENV_VALIDATION="false"

# Test mode
TEST_MODE="false"

# Logging level: debug, info, warn, error
LOG_LEVEL="info"

# ============================================================================
# NOTES
# ============================================================================
# For local development:
# 1. Copy this file to .env.local
# 2. Fill in your actual values
# 3. Never commit .env.local
#
# For production:
# 1. Set environment variables via AWS Amplify or your deployment platform
# 2. Never store production credentials in files
# 3. Use AWS Secrets Manager or similar for sensitive data
#
# For testing:
# 1. Copy relevant sections to .env.test
# 2. Use mock/test values, not production credentials
# ============================================================================
