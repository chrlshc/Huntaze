{
  "name": "huntaze-simple-services",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:ci": "tsc --noEmit --pretty false",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "vitest run --reporter=verbose --reporter=junit --outputFile.junit=reports/junit.xml",
    "test:coverage": "vitest run --coverage",
    "test:simple-services": "vitest --config vitest.simple-services.config.ts",
    "test:simple-services:run": "vitest run --config vitest.simple-services.config.ts",
    "test:simple-services:ci": "vitest run --config vitest.simple-services.config.ts --reporter=verbose --reporter=junit --outputFile.junit=reports/simple-services-junit.xml --coverage",
    "test:simple-services:watch": "vitest --config vitest.simple-services.config.ts --watch",
    "test:simple-services:coverage": "vitest run --config vitest.simple-services.config.ts --coverage",
    "test:watch": "vitest --watch",
    "test:docker": "docker compose -f docker/test.yml up -d && npm run test:ci && docker compose -f docker/test.yml down",
    "docker:test:up": "docker compose -f docker/test.yml up -d",
    "docker:test:down": "docker compose -f docker/test.yml down",
    "docker:test:logs": "docker compose -f docker/test.yml logs -f",
    "check-coverage": "node scripts/check-coverage.js",
    "validate-tests": "node scripts/run-simple-services-tests.mjs",
    "test:sam-config": "node scripts/test-sam-config.mjs",
    "test:sam-config:unit": "vitest run tests/unit/sam-config-validation.test.ts",
    "test:sam-config:regression": "vitest run tests/regression/sam-config-regression.test.ts",
    "test:sam-config:integration": "vitest run tests/integration/sam-config-integration.test.ts",
    "test:sam-config:coverage": "vitest run --coverage tests/unit/sam-config-validation.test.ts tests/regression/sam-config-regression.test.ts tests/integration/sam-config-integration.test.ts",
    "aws:deploy": "scripts/deploy-aws-infrastructure.sh",
    "aws:build": "aws codebuild start-build --project-name huntaze-simple-services",
    "clean": "rm -rf .next dist coverage reports test-results node_modules/.cache",
    "clean:docker": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-ecs": "^3.450.0",
    "@aws-sdk/client-ses": "^3.918.0",
    "@aws-sdk/client-sns": "^3.918.0",
    "@next/font": "^14.0.0",
    "@prisma/client": "^5.0.0",
    "@stripe/stripe-js": "^2.0.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stripe": "^14.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "prisma": "^5.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "yaml": "^2.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
