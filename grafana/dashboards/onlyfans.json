{
  "dashboard": {
    "title": "OnlyFans Operations",
    "uid": "onlyfans-ops",
    "version": 1,
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Messages Sent/min",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(onlyfans_campaigns_sent_total[1m])) by (audience_segment)",
            "legendFormat": "{{audience_segment}}"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Messages/min" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Rate Limit Hits (5m, by type)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(onlyfans_rate_limit_hits_total[5m])) by (type)",
            "legendFormat": "{{type}}"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Hits/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "P95 Message Duration (5m)",
        "type": "stat",
        "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(onlyfans_message_send_duration_seconds_bucket[5m])) by (le))"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.5, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active OF Sessions",
        "type": "stat",
        "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "onlyfans_active_sessions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Campaign Success Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum(rate(onlyfans_campaigns_sent_total{status=\"success\"}[5m])) / sum(rate(onlyfans_campaigns_sent_total[5m]))",
            "legendFormat": "Success Rate"
          }
        ],
        "yaxes": [
          { "format": "percentunit", "label": "Success Rate", "min": 0, "max": 1 },
          { "format": "short" }
        ]
      }
    ],
    "time": { "from": "now-6h", "to": "now" },
    "refresh": "30s"
  }
}
