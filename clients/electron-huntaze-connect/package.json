{
  "name": "huntaze-connect-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node-esm src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "simulate": "ts-node-esm src/simulate.ts",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron": "^31.2.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.huntaze.connect.desktop",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": ["nsis"]
    },
    "protocols": [
      {
        "name": "Huntaze Desktop Link",
        "schemes": ["huntaze-desktop"],
        "role": "Viewer"
      }
    ]
  }
}

